" Enable line numbers
set number

" Highlight search results as you type
set incsearch

" Enable syntax highlighting
syntax enable

" Set the tabstop, shiftwidth, and expandtab for proper indentation
set tabstop=4
set shiftwidth=4
set expandtab

" Show matching parentheses and brackets
set showmatch

" Enable mouse support
set mouse=a

" Set a dark background color scheme (you can change this to your preference)
colorscheme desert

" Enable line wrapping
set wrap

" Auto-indent new lines
set smartindent
set autoindent

" Enable file type detection
filetype plugin indent on

" Enable line and column position in the status line
set ruler

" Enable search highlighting after a search
set hlsearch

" Set the background color to dark for better readability
set background=dark
