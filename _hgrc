[ui]
username = Stefan Scherfke <stefan@sofa-rockers.org>

[extensions]
churn =
color =
convert =
fetch =
extdiff =
graphlog =
highlight =
mq =
pager =
purge =
progress =
record =
transplant =

[alias]
incoming = incoming --graph
outgoing = outgoing --graph
lg = glog --style=$HOME/.mercurial/templates/lg.config
lg5 = glog --style=$HOME/.mercurial/templates/lg.config -l5

[extdiff]
cmd.opendiff = opendiff-w
cmd.kdiff3 =

[merge-tools]
splice.executable = mvim
splice.args = -f $base $local $other $output -c 'SpliceInit'
splice.premerge = keep
splice.priority = 1

spliceg.executable = gvim
spliceg.args = -f $base $local $other $output -c 'SpliceInit'
spliceg.premerge = keep
spliceg.priority = 1

filemerge.executable = opendiff-w
filemerge.args = $local $other -ancestor $base -merge $output

kdiff3.args = $base $local $other -o $output

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, lg, lg5, glog, log, qdiff,

[web]
allow_archive = zip, bz2
pygments_style = tango
