[user]
name = Stefan Scherfke
email = stefan@sofa-rockers.org

[core]
excludesfile = $HOME/.gitignore_global

[push]
default = simple

[diff]
tool = meld

[merge]
# tool = meld
tool = splice

[mergetool "splice"]
cmd = "vim -f $BASE $LOCAL $REMOTE $MERGED -c 'SpliceInit'"
trustExitCode = true

[color]
diff = auto
status = auto
branch = auto
ui = auto

[log]
decorate = auto

[alias]
br = branch
ci = commit
co = checkout
last = log -1 HEAD
st = status
unstage = reset HEAD --
lg-short = log --graph --abbrev-commit --decorate --format=format:'%C(blue)%h%C(reset) - %s - %C(cyan)%an%C(reset) %C(green)(%ar)%C(reset)%C(red)%d%C(reset)' --all
lg-medium = log --graph --abbrev-commit --decorate --format=format:'%C(bold)%s%C(reset)%n''%C(blue)%h%C(reset) - %C(cyan)%an%C(reset) on %C(green)%aD%C(reset) %C(yellow)(%ar)%C(reset)%C(red)%d%C(reset)%n' --all
lg = !"git lg-medium"
lg5 = !"git lg-medium -5"
glog = log --graph
